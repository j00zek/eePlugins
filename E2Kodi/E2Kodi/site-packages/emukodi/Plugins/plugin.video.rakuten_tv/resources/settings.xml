<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings>
  <category label="dev">
    <setting label='device_uid' type="text" id="device_uid" value="" default=""/>
    <setting label='publisher_provided_id' type="text" id="publisher_provided_id" value="" default=""/>
    <setting label='device_serial' type="text" id="device_serial" value="" default=""/>
  </category>
  <category label="VOD">
    <setting label='ilość pozycji na stronie' type="number" id="count" value="" default="100"/>
