        <setting label="Katalog" type="folder" id="path_m3u" source="auto" option="writeable"/>
        <setting type="action" action="RunPlugin(plugin://plugin.video.rakuten_tv?mode=create_m3u)" label="Utwórz listę m3u" option="close"/>
    </category>

