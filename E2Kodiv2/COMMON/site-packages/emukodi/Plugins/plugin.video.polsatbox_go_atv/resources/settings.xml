<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings>
	<category label="Dane logowania">
		<setting type="lsep" label="Dane Logowania" />
		<setting id="logMethod" type="labelenum" label="Sposób logowania" values="iPolsat Box|inne dane|kodem" default=""/>
		<setting id="username"  type="text" label="Login" default="" />
		<setting id="password"  type="text" label="Hasło" option="hidden"  />
	</category>	
	<category label="Ogólne">
		<setting id="count"  type="number" label="Ilość elementów na stronie" default="25" />
		<setting id="sortList"  type="select" label="Sortowanie list" values="alfabetycznie|data dodania" default="alfabetycznie" />
	</category>
	<category label="Kreator listy m3u">
        <setting label="Lista m3u (Nazwa Pliku oraz Katalog Docelowy)" type="lsep"/>
        <setting label="Nazwa" type="text" id="fname" default="iptv.m3u"/>
        <setting label="Katalog" type="folder" id="path_m3u" source="auto" option="writeable"/>
        <setting type="action"
                 action="RunPlugin(plugin://plugin.video.polsatbox_go_atv?mode=listM3U)"
                 label="Utwórz listę m3u"
                 option="close"/>
	</category>
	<category label="Ulubione">
		<setting type="action" action="RunPlugin(plugin://plugin.video.polsatbox_go_atv?mode=expFav)" label="Eksportuj ulubione" option="close"/>
		<setting type="action" action="RunPlugin(plugin://plugin.video.polsatbox_go_atv?mode=impFav)" label="Importuj ulubione" option="close"/>
	</category>
