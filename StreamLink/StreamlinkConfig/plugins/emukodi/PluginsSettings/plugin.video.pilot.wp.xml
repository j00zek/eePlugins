<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings>
  <category label="Konto">
    <setting label="Login" type="text" id="username" default="getE2config('WPusername')"/>
    <setting label="Hasło" type="text" id="password" option="hidden" enable="!eq(-1,)" default="getE2config('WPpassword')"/>
  </category>
  <category label="Kreator listy m3u">
    <setting label="Lista m3u (Nazwa Pliku oraz Katalog Docelowy)" type="lsep"/>
    <setting label="Nazwa" type="text" id="fname" default="userbouquet.WPPL.tv" />
    <setting label="Katalog" type="folder" id="path" source="auto" option="writeable" default="/etc/enigma2"/>
    <setting type="action"
             action="RunPlugin(plugin://plugin.video.pilot.wp?action=BUILD_M3U)"
             label="Utwórz listę m3u"
             option="close" />
  </category>
</settings>