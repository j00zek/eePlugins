<skin>
  <screen name="StandbySummary" position="0,0" size="100%,100%"> <!-- org resolution 480x320 -->
  <!-- ON/OFF icon -->
    <widget source="session.CurrentService" render="Pixmap" zPosition="10" position="0%,0%" size="100%,100%" pixmap="/usr/lib/enigma2/python/Plugins/Extensions/ShareLCDwithVolumio/icons/volumio_logo.png" alphatest="blend">
            <convert type="j00zekLCD4volumio">showWhenPlaying</convert>
            <convert type="ConditionalShowHide"/>
    </widget>
  <!-- ARTIST -->
    <widget position="2%,1%" size="96%,45%" font="BHfDlcD;50" zPosition="15" transparent="1" foregroundColor="#FFFF00" render="Label" source="session.CurrentService" halign="center" valign="center">
            <convert type="j00zekLCD4volumio">artist,hideWhenNotplaying</convert>
    </widget>
  <!-- TITLE -->
    <widget position="2%,25%" size="96%,45%" font="BHfDlcD;50" zPosition="15" transparent="1" foregroundColor="#FFFF00" render="Label" source="session.CurrentService" halign="center" valign="center">
            <convert type="j00zekLCD4volumio">title,hideWhenNotplaying,DoRefreshDict</convert>
    </widget>
  <!-- Standard Progress ON/OFF -->
    <widget position="2%,77%" size="96%,3%" zPosition="15" source="session.CurrentService" render="Progress" borderWidth="2" transparent="1">
        <convert type="j00zekLCD4volumio">progress,hideWhenNotplaying</convert>
    </widget>
  <!-- current Time -->
    <widget source="global.CurrentTime" render="Label" zPosition="15" position="2%,2%" size="48%,55" font="BHfDlcD;50" halign="left" valign="left" noWrap="1">
            <convert type="j00zekLCD4volumio">currentTime</convert>
    </widget>
  <!-- PLAYED TIME -->
    <widget position="49%,82%" size="48%,55" font="BHfDlcD;50" zPosition="15" transparent="1" foregroundColor="blue" render="Label" source="session.CurrentService" halign="right" valign="center" noWrap="1">
            <convert type="j00zekLCD4volumio">lefttime,hideWhenNotplaying</convert>
    </widget>
  <!-- DURATION -->
    <widget position="3%,82%" size="48%,55" font="BHfDlcD;50" zPosition="15" transparent="1" foregroundColor="green" render="Label" source="session.CurrentService" halign="left" valign="center" noWrap="1">
            <convert type="j00zekLCD4volumio">duration,hideWhenNotplaying</convert>
    </widget>
  <!-- SERVICE -->
    <widget position="25%,82%" size="48%,55" font="BHfDlcD;50" zPosition="15" transparent="1" foregroundColor="orange" render="Label" source="session.CurrentService" halign="center" valign="center" noWrap="1">
            <convert type="j00zekLCD4volumio">service,hideWhenNotplaying</convert>
    </widget>
  </screen>
</skin>
