<skin>
	<windowstyle id="1" type="skinned"><!--just init, some tuners (zgemma) needs it for vfd to work properly --></windowstyle>
<!-- MyClockPanel -->    
    <screen name="MyClockPanel">
        <widget source="global.CurrentTime" render="Label" position="0,0" size="120,64" >
            <convert type="ClockToText">Format:%-H:%M</convert>
        </widget>
    </screen>
<!-- MyChannelNumberPanel -->    
    <screen name="MyChannelNumberPanel">
		<widget source="session.CurrentService" render="Label" position="0,0" size="120,64" halign="right" noWrap="1">
			<convert type="ServiceName">Name</convert>
		</widget> 
	</screen>
    
