<skin>
<!-- SHOUTcast -->
    <screen name="SHOUTcastLCDScreen" position="0,0" size="400,240">
        <widget source="global.CurrentTime" render="Label" position="10,10" size="200,55" font="FdLcD;48" halign="left" valign="center" transparent="1">
            <convert type="ClockToText">Format:%H:%M:%S</convert>
        </widget>
        <widget objectTypes="text1,Label" name="text1" position="20,90" size="380,40" font="FdLcD;40" halign="left" valign="center" foregroundColor="#FFBF00" transparent="1"/>
        <widget objectTypes="text1,StaticText" source="text1" render="RunningText" options="movetype=running,startpoint=0,direction=left,steptime=40,startdelay=10000" position="20,90" size="380,50" font="FdLcD;40" halign="left" valign="center" foregroundColor="#FFBF00" transparent="1"/>
        <widget objectTypes="text2,Label" name="text2" position="16,187" size="380,62" font="FdLcD;48" halign="left" noWrap="1" foregroundColor="#808000" transparent="1"/>
        <widget objectTypes="text2,StaticText" source="text2" render="RunningText" options="movetype=running,startpoint=0,direction=left,steptime=40,startdelay=10000" position="16,187" size="380,62" font="FdLcD;48" halign="left" noWrap="1" foregroundColor="#808000" transparent="1"/>
        <widget name="songPic" position="0,0" zPosition="4" size="400,190" alphatest="off"/>		
	</screen>
</skin>
